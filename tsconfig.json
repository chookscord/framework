{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": [
      "ESNext"
    ],
    "esModuleInterop": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "skipLibCheck": true,
    "declaration": true,
    "strict": true
  },
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}
