{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "strict": true,
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declarationMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "preserveWatchOutput": true
  }
}